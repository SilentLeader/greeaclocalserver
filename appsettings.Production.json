{
    "Serilog": {
        "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
        "MinimumLevel": "Information",
        "WriteTo": [
            { 
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {ClientIPAddress} {Message:lj}{NewLine}{Exception}"
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/gree-ac-server-.log",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 7,
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {ClientIPAddress} {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithThreadId" ],
        "Properties": {
            "Application": "GreeACLocalServer"
        }
    },
    "Server": {
        "Port": 5000,
        "DomainName": "gree.example.com",
        "ExternalIp": "192.168.1.100",
        "ListenIPAddresses": [],
        "CryptoKey": "a3K8Bx%2r8Y7#xDh",
        "EnableUI": true
    },
    "DeviceManager": {
        "DeviceTimeoutMinutes": 60
    },
    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://*:5100"
            }
        }
    }
}
